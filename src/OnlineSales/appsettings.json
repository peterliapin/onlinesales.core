{
  "AllowedHosts": "*",
  "MigrateOnStart": true,
  "Plugins": [ "OnlineSales.Plugin.ReverseProxy", "OnlineSales.Plugin.EmailSync" ],
  "Entities": {
    "Include": [],
    "Exclude": []
  },
  "DefaultRoles": [
    "Admin"
  ],
  "DefaultUsers": [
    {
      "UserName": "admin",
      "Email": "admin@admin.com",
      "Password": "adminPass!123",
      "Roles": [ "Admin" ]
    }
  ],
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "Postgres": {
    "Server": "localhost",
    "Port": "5432",
    "UserName": "postgres",
    "Password": "postgres",
    "Database": "onlinesales"
  },
  "Elastic": {
    "Server": "localhost",
    "Port": "9200",
    "UseHttps": false,
    "UserName": "elastic",
    "Password": "elastic",
    "IndexPrefix": "onlinesales"
  },
  "Email": {
    "Server": "localhost",
    "UserName": "$EMAIL__USERNAME",
    "Password": "$EMAIL__PASSWORD",
    "Port": "1025",
    "UseSsl": "false"
  },
  "TaskRunner": {
    "CronSchedule": "0/30 * * * * ?"
  },
  "Tasks": {
    "DomainVerificationTask": {
      "Enable": false,
      "CronSchedule": "0/30 * * * * ?",
      "RetryCount": "2",
      "RetryInterval": "1",
      "BatchSize": "1",
      "BatchInterval": 1
    },
    "ContactScheduledEmail": {
      "Enable": false,
      "CronSchedule": "0 0/1 * * * ?",
      "RetryCount": "2",
      "RetryInterval": "5"
    },
    "SyncIpDetailsTask": {
      "Enable": false,
      "CronSchedule": "0 0/1 * * * ?",
      "RetryCount": "2",
      "RetryInterval": "5",
      "BatchSize": "50"
    },
    "SyncEsTask": {
      "Enable": true,
      "CronSchedule": "0/30 * * * * ? *",
      "RetryCount": "2",
      "RetryInterval": "5",
      "BatchSize": "500"
    },
    "ContactAccountTask": {
      "Enable": false,
      "CronSchedule": "0/10 * * * * ? *",
      "RetryCount": "2",
      "RetryInterval": "5",
      "BatchSize": "5000"
    },
    "SyncEmailLogTask": {
      "Enable": false,
      "CronSchedule": "0/30 * * * * ? *",
      "RetryCount": "2",
      "RetryInterval": "5",
      "BatchSize": "100"
    }
  },
  "Media": {
    "Extensions": [
      ".png",
      ".jpg",
      ".jpeg",
      ".ico",
      ".webp",
      ".svg",
      ".gif",
      ".mp4"
    ],
    "MaxSize": [
      {
        "Extension": "default",
        "MaxSize": "500KB"
      },
      {
        "Extension": ".mp4",
        "MaxSize": "3000KB"
      }
    ]
  },
  "File": {
    "Extensions": [
      ".zip",
      ".xml",
      ".xmlx",
      ".xmlm",
      ".doc",
      ".docx",
      ".txt"
    ],
    "MaxSize": [
      {
        "Extension": "default",
        "MaxSize": "1MB"
      },
      {
        "Extension": ".zip",
        "MaxSize": "3MB"
      }
    ]
  },
  "CacheProfiles": [
    {
      "Type": "ImageResponse",
      "Duration": 1200,
      "VaryByHeader": "User-Agent"
    }
  ],
  "Cors": {
    "AllowedOrigins": [
      "*"
    ]
  },
  "GeolocationApi": {
    "Url": "https://api.ipgeolocation.io/ipgeo",
    "AuthKey": "$GEOLOCATIONAPI__AUTHKEY"
  },
  "ApiSettings": {
    "MaxListSize": 10,
    "MaxImportSize": "5MB",
    "DefaultLanguage": "en-US"
  },
  "EmailVerificationApi": {
    "Url": "https://emailverification.whoisxmlapi.com/api/v2",
    "ApiKey": "$EMAILVERIFICATIONAPI__APIKEY"
  },
  "AccountDetailsApi": {
    "Url": "https://www.klazify.com/api/categorize",
    "ApiKey": "$ACCOUNTDETAILSAPI__APIKEY"
  },
  "Cookies": {
    "Enable": true,
    "Name": "auth_ticket",
    "ExpireTime": "12"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "$AZUREAD__TENANTID",
    "Domain": "$AZUREAD__DOMAIN",
    "ClientId": "$AZUREAD__CLIENTID",
    "Scope": "$AZUREAD__SCOPE",
    "ClientSecret": "$AZUREAD__CLIENTSECRET"
  },
  "Jwt": {
    "Secret": "$JWT__SECRET",
    "Issuer": "$JWT__ISSUER",
    "Audience": "$JWT__AUDIENCE"
  },
  "Identity": {
    "LockoutTime": "5",
    "MaxFailedAccessAttempts": "10"
  }
}
